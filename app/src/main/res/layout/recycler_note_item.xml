<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginVertical="8dp"
    android:backgroundTint="@color/card_bg"
    android:background="@drawable/rounded_cornor"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/note_title_txt_view"
        android:text="note title"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:layout_marginVertical="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/note_content_txt_view"
        android:text="this can be note content that can be long"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:layout_marginVertical="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/note_timestamp_txt_view"
        android:text="note title"
        android:textSize="10sp"
        android:gravity="right"
        android:layout_marginVertical="4dp"/>



</LinearLayout>